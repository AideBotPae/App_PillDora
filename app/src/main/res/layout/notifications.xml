<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graylight"
    android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:background="@drawable/bottom_line">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_margin="20dp">

          <TextView
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:text="Notifcations tones"
              android:textStyle="bold"
              android:textSize="20dp"
              ></TextView>

              <TextView
                  android:layout_width="200dp"
                  android:layout_height="wrap_content"
                  android:text="Reproduces sounds for the in or out notifcations"
                  android:textStyle="italic"
                  android:textSize="15dp"
                  ></TextView>
          </LinearLayout>

          <Switch
              android:id="@+id/notification_tones"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:checked="true">
          </Switch>

      </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bottom_line">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Notifcations Vibration"
                android:textStyle="bold"
                android:textSize="20dp"
                ></TextView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Sets the type of vibration for the notification"
                android:textStyle="italic"
                android:textSize="15dp"
                ></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/notification_vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Set">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bottom_line">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Notifications Light"
                android:textStyle="bold"
                android:textSize="20dp"
                ></TextView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Establishes the colour light fot the notifications"
                android:textStyle="italic"
                android:textSize="15dp"
                ></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/notification_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Set">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bottom_line">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Notifcations Priority"
                android:textStyle="bold"
                android:textSize="20dp"
                ></TextView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Priority of the notifications"
                android:textStyle="italic"
                android:textSize="15dp"
                ></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/notification_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Set">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bottom_line">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Email notification"
                android:textStyle="bold"
                android:textSize="20dp"
                ></TextView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Notification will also be send to email of user"
                android:textStyle="italic"
                android:textSize="15dp"
                ></TextView>
        </LinearLayout>

        <Switch
            android:id="@+id/notification_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="false">
        </Switch>

    </LinearLayout>


    <Button
        android:id="@+id/button_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttonstyle"
        android:text="Go back"
        android:textColor="#fff" />



</LinearLayout>